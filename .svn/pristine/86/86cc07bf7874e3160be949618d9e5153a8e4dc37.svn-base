html {
    flex           : 1;
    justify-content: center;
    align-items    : center;
    background     : #F7F7F7;
    min-height     : calc(100vh);

    [v-cloak] {
        display: none;
    }

    .main_div {
        // height: calc(100vh);
        position : relative;

        .news_list {
            .news_list_title {
                font-size  : 18px;
                padding    : 0px 10px;
                padding-top: 20px;
                text-align : center;
                font-weight: bold;
            }
        }
        .content {
            img {
                width: 100%;
            }
        }
    }
}