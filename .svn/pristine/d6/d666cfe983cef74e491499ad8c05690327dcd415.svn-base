body {
    background : #f7f7f7;
    flex       : 1;
    align-items: center;
    min-height : calc(100vh);

    [v-cloak] {
        display: none;
    }

    // 头部，步骤条
    .box_type_step_div {
        padding    : 0 .666667rem;
        padding-top: .373333rem;

        .box_type_step_img_div {
            margin-bottom: .32rem;
            padding      : 0 .266667rem;
        }

        .box_type_step_row {
            margin-left: .133333rem;
            text-align : center;

            .box_type_step_col {
                font-family: Source Han Sans CN;
                font-size  : .293333rem;
                font-weight: 400;
                color      : #010101;
                line-height: .426667rem;
                opacity    : 0.6;
            }
        }
    }
}