html {
    flex           : 1;
    justify-content: center;
    align-items    : center;
    background     : #fff;
    min-height     : calc(100vh);

    [v-cloak] {
        display: none;
    }

    .main_div {
        // height: calc(100vh);
        position : relative;

        .main_top {
            height    : 2rem;
            background: linear-gradient(to right, rgb(72, 167, 72), rgb(32, 218, 146));
            color     : #fff;
            padding   : .8rem 0;
            text-align: center;
            font-size : .4rem;

            .top-two {
                margin   : 5px 0px;
                font-size: .8rem;
            }
        }

        .list {
            margin : 10px;
            padding: 10px;

            .list-top {
                display        : flex;
                align-items    : center;
                justify-content: space-between;
                margin-bottom  : 5px;
            }
        }

    }
}