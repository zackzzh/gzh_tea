html {
  flex: 1;
  justify-content: center;
  align-items: center;
  background: #fff;
  min-height: calc(100vh);
}
html [v-cloak] {
  display: none;
}
html .main_div {
  position: relative;
}
html .main_div .main_top {
  height: 2rem;
  background: linear-gradient(to right, #48a748, #20da92);
  color: #fff;
  padding: .8rem 0;
  text-align: center;
  font-size: .4rem;
}
html .main_div .main_top .top-two {
  margin: 5px 0px;
  font-size: .8rem;
}
html .main_div .main_mid_one {
  height: 1.066667rem;
  line-height: 1.066667rem;
  font-size: .4rem;
  background: #f8f8f8;
  margin: 10px 0px;
}
html .main_div .main_mid_one .van-col {
  text-align: center;
}
html .main_div .main_mid_two {
  height: 1.066667rem;
  line-height: 1.066667rem;
  font-size: .32rem;
}
html .main_div .main_mid_two .van-col {
  text-align: center;
}
html .main_div .main_mid_two .active {
  color: red;
}
