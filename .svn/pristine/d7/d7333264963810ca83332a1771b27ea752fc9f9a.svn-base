html {
    background : #F7F7F7;
    flex       : 1;
    align-items: center;
    min-height : calc(100vh);

    [v-cloak] {
        display: none;
    }

    .main_div {

        // height: calc(100vh);
        .header_title {
            margin   : 0 .213333rem;
            font-size: .426667rem;
            color    : #A9B0AF;
        }

        .header_title_active {
            font-size: .56rem;
            color    : #009172;
        }

        .card_div {
            margin       : .426667rem .133333rem;
            padding      : .426667rem .48rem .8rem .48rem;
            border-radius: .133333rem;
            background   : #ffffff;
            box-shadow   : 0 0 .453333rem 0 rgba(18, 46, 116, 0.1);

            .card_title {
                margin-bottom: .613333rem;
                font-family  : Noto Sans S Chinese;
                font-size    : .453333rem;
                font-weight  : 400;
                color        : #000000;
            }

            .card_rate_row {
                margin-bottom: .533333rem;

                .card_rate_title {
                    margin-right: .4rem;
                    font-family : Noto Sans S Chinese;
                    font-size   : .373333rem;
                    font-weight : 400;
                }
            }

            .card_subtitle {
                font-family: Noto Sans S Chinese;
                font-size  : .32rem;
                font-weight: 400;
                color      : #7C7C7C;
            }
        }

        .details_btn_div {
            // width  : 100%;
            margin-top: .8rem;
            padding   : 0 .8rem;

            .details_btn {
                width        : 100%;
                border       : none;
                border-radius: .586667rem;
                font-family  : PingFang SC;
                font-weight  : 500;
                font-size    : .4rem;
                line-height  : .4rem;
                background   : #007D7B;
            }
        }
    }
}